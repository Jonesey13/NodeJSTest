@import 'style'

.main-content-small
  width 100%

  p
    text-align center
    font-family 'Merriweather'
    font-size 24px
    padding 10px

.picture-box
  float right
  width 400px

  p
    font-size 20px
    margin 0

  img
    width 400px

  border-radius 20px
  padding 10px
  margin 20px
  margin-top 0px
  border 1px solid #ccc
  background-color background-color
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)


.picture-box-inline
  width 90%
  display flex
  flex-wrap wrap
  margin auto

  p
    flex 1
    font-size 20px
    margin-bottom 0
    margin-top 10px

  a
    flex 0 0 100%
    img
      width 100%

  border-radius 20px
  padding 20px
  border 1px solid #ccc
  background-color background-color
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

.picture-box-inline-group
  width 90%
  display flex
  flex-wrap wrap
  margin auto

  p
    flex 1
    font-size 20px
    margin-bottom 0
    margin-top 10px

  .image-container
    flex 0 0 100%
    display flex
    .image
      flex 1
      img
        width 100%
  
  border-radius 20px
  padding 20px
  border 1px solid #ccc
  background-color background-color
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)


hr
  margin 20px